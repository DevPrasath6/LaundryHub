# Environment variables for local development
# Copy this file to .env and update the values

# Database Configuration
MONGO_URI=mongodb://admin:password@localhost:27017/adya?authSource=admin
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d

# External Service APIs
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Firebase (Push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Blockchain Configuration
ETHEREUM_NETWORK=sepolia
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_for_contract_deployment
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# Service URLs (for development)
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
LAUNDRY_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
LOSTFOUND_SERVICE_URL=http://localhost:3005
REPORTING_SERVICE_URL=http://localhost:3006

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=Smart Laundry System
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Logging
LOG_LEVEL=info
NODE_ENV=development

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# AI/ML Configuration
AI_MODEL_PATH=./ai-ml/models
TENSORFLOW_MODEL_PATH=./ai-ml/lostfound-matching/models

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=adya_iot
MQTT_PASSWORD=iot_password_change_in_production

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1
