# Smart Laundry System Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB
MONGODB_URI=mongodb://localhost:27017/smart-laundry
MONGODB_TEST_URI=mongodb://localhost:27017/smart-laundry-test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# CORS Settings
CORS_ORIGIN=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# MICROSERVICES CONFIGURATION
# =============================================================================
# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
LAUNDRY_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
LOSTFOUND_SERVICE_URL=http://localhost:3005
REPORTING_SERVICE_URL=http://localhost:3006

# API Gateway
API_GATEWAY_PORT=3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PAYMENT CONFIGURATION
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Blockchain Configuration
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=your_private_key_for_blockchain_transactions
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@smartlaundry.com
FROM_NAME=Smart Laundry System

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_firebase_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id

# =============================================================================
# IOT & MQTT CONFIGURATION
# =============================================================================
# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=smartlaundry
MQTT_PASSWORD=secure_mqtt_password
MQTT_CLIENT_ID=smart-laundry-backend

# Azure IoT Hub
AZURE_IOT_CONNECTION_STRING=HostName=your-iot-hub.azure-devices.net;SharedAccessKeyName=service;SharedAccessKey=your_access_key
AZURE_IOT_DEVICE_ID=smart-laundry-device

# Device Simulation
ENABLE_IOT_SIMULATION=true
IOT_UPDATE_INTERVAL=30000

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# Model Settings
ML_MODEL_PATH=./ai-ml/models
DEMAND_FORECAST_MODEL=demand_predictor_v1.pkl
ITEM_MATCHING_MODEL=item_matcher_v1.pth

# External APIs
WEATHER_API_KEY=your_openweather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Computer Vision
CV_CONFIDENCE_THRESHOLD=0.75
CV_MAX_IMAGE_SIZE=1024

# =============================================================================
# CLOUD SERVICES
# =============================================================================
# Azure Digital Twins
AZURE_DT_URL=https://your-dt-instance.api.wcus.digitaltwins.azure.net
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# File Storage (Azure Blob Storage)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=smart-laundry-files

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/app.log
ENABLE_REQUEST_LOGGING=true

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key

# Health Check
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Database
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true
DEV_RESET_DB=false

# Testing
TEST_TIMEOUT=10000
TEST_PARALLEL=false

# Debug
DEBUG=smart-laundry:*
VERBOSE_LOGGING=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/Disable Features
FEATURE_BLOCKCHAIN_PAYMENTS=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_IOT_INTEGRATION=true
FEATURE_DIGITAL_TWIN=false
FEATURE_MOBILE_APP=true
FEATURE_ADMIN_ANALYTICS=true

# SendGrid (Email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Firebase (Push notifications)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# Blockchain Configuration
ETHEREUM_NETWORK=sepolia
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_for_contract_deployment
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_infura_project_id

# Service URLs (for development)
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
LAUNDRY_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
LOSTFOUND_SERVICE_URL=http://localhost:3005
REPORTING_SERVICE_URL=http://localhost:3006

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=Smart Laundry System
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Logging
LOG_LEVEL=info
NODE_ENV=development

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# AI/ML Configuration
AI_MODEL_PATH=./ai-ml/models
TENSORFLOW_MODEL_PATH=./ai-ml/lostfound-matching/models

# IoT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=adya_iot
MQTT_PASSWORD=iot_password_change_in_production

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_for_error_tracking
GOOGLE_ANALYTICS_ID=your_ga_tracking_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1
